<h1>Question</h1>

<p>
  <b>Title</b><br>
  <%= @question.title %>
</p>

<p>
  <b>Type</b><br>
  <%= @question.type %>
</p>

<p>
  <b>Media</b><br>
  <%= @question.media %>
</p>

<p>
  <b>Description</b><br>
  <%= @question.description %>
</p>

<p>
  <b>Question</b><br>
  <%= @question.question %>
</p>

<p>
  <b>Options</b><br>
  <%= @question.options %>
</p>

<p>
  <b>Answer</b><br>
  <%= @question.answer %>
</p>

<div class="form-actions">
  <%= link_to 'Back', questions_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_question_path(@question), :class => 'btn' %>
  <%= link_to 'Delete', question_path(@question), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
