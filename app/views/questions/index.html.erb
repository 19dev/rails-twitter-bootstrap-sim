<h1>Questions</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Qtype</th>
      <th>Created at</th>
      <th>Created by</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= link_to question.title, question_path(question) %></td>
        <td><%= question.qtype %></td>
        <td><%= question.created_at %></td>
        <td><%= question.user.username %></td>
        <td>
          <% if can? :edit, question %>
            <%= link_to 'Edit', edit_question_path(question), :class => 'btn btn-mini' %>
          <% end %>
          <% if can? :destroy, question %>
            <%= link_to 'Destroy', question_path(question), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Question %>
  <%= link_to 'New', new_question_path, :class => 'btn btn-primary' %>
<% end %>
